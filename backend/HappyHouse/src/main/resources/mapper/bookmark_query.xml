<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.happyhouse.api.bookmark.dao.BookmarkDao">
	
	<select id ="getBookmarkList" parameterType="int" resultType="com.happyhouse.api.bookmark.dto.BookmarkDto">
		select bookmark_id, deal_id, house_id
		  from bookmark
		 where user_id = #{userId}
	</select>
		
	<insert id="registBookmark" parameterType="map">
		insert into bookmark ( deal_id, user_id )
			        values ( #{dealId}, #{userId} )		
	</insert>
	
	<delete id="deleteBookmark" parameterType="int">
		delete from bookmark
			  where bookmarkId = #{bookmarkId}
	</delete>	
</mapper>
