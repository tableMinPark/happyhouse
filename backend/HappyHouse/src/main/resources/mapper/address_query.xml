<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.happyhouse.api.common.address.dao.AddressDao">
	<select id ="getSido" resultType="com.happyhouse.api.common.address.dto.AddressDto">
		select code, name
		  from sido
	</select>
	
	<select id ="getGugun" parameterType="int" resultType="com.happyhouse.api.common.address.dto.AddressDto">
		select code, name
		  from gugun
		 where sido_code = #{sidoCode}
	</select>
	
	<select id ="getDong" parameterType="map" resultType="com.happyhouse.api.common.address.dto.AddressDto">
		select code, name
		  from dong
		 where sido_code = #{sidoCode}
		   and gugun_code = #{gugunCode}
	</select>
</mapper>
